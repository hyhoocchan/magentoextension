<?xml version="1.0"?>
<config>
    <modules>
        <Developer_Test>
            <version>0.1.0</version>
        </Developer_Test>
    </modules>
    <frontend>
        <routers>
            <test>
                <use>standard</use>
                <args>
                    <module>Developer_Test</module>
                    <frontName>test</frontName>
                </args>
            </test>
        </routers>
        <layout>
            <updates>
                <test>
                    <file>test.xml</file>
                </test>
            </updates>
        </layout>
    </frontend>
    <global>
        <helpers>
            <test>
                <class>Developer_Test_Helper</class>
            </test>
        </helpers>
        <blocks>
            <test>
                <class>Developer_Test_Block</class>
            </test>
        </blocks>
    </global>
    <admin>
        <routers>
            <test>
                <use>admin</use>
                <args>
                    <module>Developer_Test</module>
                    <frontName>admin_test</frontName>
                </args>
            </test>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <test module="test">
                <title>Test</title>
                <sort_order>100</sort_order>
                <children>
                    <testbackend module="test">
                        <title>Backend Page Title</title>
                        <sort_order>0</sort_order>
                        <action>admin_test/adminhtml_testbackend</action>
                    </testbackend>
                </children>
            </test>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <test translate="title" module="test">
                            <title>Test</title>
                            <sort_order>1000</sort_order>
                            <children>
                                <testbackend translate="title">
                                    <title>Backend Page Title</title>
                                </testbackend>
                            </children>
                        </test>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <test>
                    <file>test.xml</file>
                </test>
            </updates>
        </layout>
    </adminhtml>
</config> 